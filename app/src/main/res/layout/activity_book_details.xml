<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book_image_background"
    android:orientation="vertical"

    tools:context=".BookDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@color/darkBlue"
                            android:backgroundTint="@color/darkBlue"
                            android:elevation="@dimen/cardview_compat_inset_shadow"
                            app:cardCornerRadius="17dp"
                            app:cardElevation="10dp"

                            >

                            <ImageView
                                android:id="@+id/imgBookDetailsImage"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:layout_margin="0dp"
                                android:transitionName="bookImage"
                                app:srcCompat="@mipmap/book_store_icon" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_bakcground"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtBookDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:fontFamily="@font/days_one"
        android:gravity="center"

        android:text="Book Title"
        android:textColor="@color/white"

        android:textSize="30dp" />
</LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="3dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                app:srcCompat="@drawable/baseline_border_color_24" />

                            <TextView
                                android:id="@+id/txtBookDetailsAuthor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/dancing_script_bold"
                                android:text="Author Name"
                                android:textColor="@color/white" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/txtBookDetailsRatingOutOf5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.6"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="@color/white"
                                android:textSize="17dp" />

                            <RatingBar
                                android:id="@+id/ratingBarBookDetails"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.9"
                                android:backgroundTint="@color/white"
                                android:foregroundGravity="center"
                                android:numStars="5"
                                android:rating="4" />

                            <TextView
                                android:id="@+id/txtToatalNumberOfRates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="100 ratings" />


                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4" />
                            <ImageView
                                android:id="@+id/imgBookDetailsDownload"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                app:srcCompat="@drawable/round_arrow_downward_24" />
                            <ImageView
                                android:id="@+id/imgBookDetailsReading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                app:srcCompat="@drawable/baseline_chrome_reader_mode_24" />

                            <ImageView
                                android:id="@+id/imgBookDetailsLike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                app:srcCompat="@drawable/favorite_24px" />

                            <ImageView
                                android:id="@+id/imgBookDetailsSave"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                app:srcCompat="@drawable/baseline_bookmark_border_24" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/book_description_background"
                    android:minHeight="400dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtBookDetailsDescriptionTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_margin="10dp"
                            android:layout_weight="2"
                            android:fontFamily="@font/racing_sans_one"
                            android:gravity="top"
                            android:text="Description"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/imgBookDetailsDescriptionTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            app:srcCompat="@drawable/baseline_assignment_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtBookDetailsCategoryTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginRight="0dp"
                            android:layout_weight="0.1"
                            android:fontFamily="@font/racing_sans_one"
                            android:gravity="center_vertical"
                            android:padding="3dp"
                            android:text="Category :"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/txtBookDetailsCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/racing_sans_one"
                            android:gravity="left"
                            android:padding="3dp"
                            android:text="Fiction"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtBookDetailsDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/baloo_bhaina"
                        android:padding="9dp"
                        android:text="Description"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>